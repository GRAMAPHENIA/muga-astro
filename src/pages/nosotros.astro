---
import Layout from "../layouts/layout.astro";
import Navigation from "../components/ui/Navigation/Navigation.astro";
import Breadcrumb from "../components/ui/Breadcrumb/Breadcrumb.astro";
import PageHeroSection from "../components/HeroSection/PageHeroSection.astro";
import type { BreadcrumbItem } from "../types";

const breadcrumbItems: BreadcrumbItem[] = [
  {
    label: "Nosotros",
    href: "/nosotros",
    active: true,
  },
];
---

<Layout title="Nosotros | MUGA" description="Conoce más sobre nosotros">
  <Navigation>
    <Breadcrumb items={breadcrumbItems} slot="mobile-breadcrumb" />
  </Navigation>
  <div class="hidden lg:block">
    <Breadcrumb items={breadcrumbItems} />
  </div>
  <PageHeroSection 
    title="Nosotros"
    description="Conoce más sobre nuestro equipo y nuestra historia."
    textAlign="left"
    showBadge={true}
    badgeText="Equipo"
  />
  
  <!-- Resto del contenido -->
</Layout>