---
import Layout from "../layouts/layout.astro";
import Navigation from "../components/ui/Navigation/Navigation.astro";
import Breadcrumb from "../components/ui/Breadcrumb/Breadcrumb.astro";
import PageHeroSection from "../components/HeroSection/PageHeroSection.astro";
import type { BreadcrumbItem } from "../types";

const breadcrumbItems: BreadcrumbItem[] = [
  {
    label: "Nosotros",
    href: "/nosotros",
    active: true,
  },
];
---

<Layout title="Nosotros | MUGA" description="Arquitectura web de nueva generación">
  <Navigation>
    <Breadcrumb items={breadcrumbItems} />
  </Navigation>
  <div class="hidden lg:block">
    <Breadcrumb items={breadcrumbItems} />
  </div>
  <PageHeroSection
    title="AWNG"
    description="Arquitectura Web de Nueva Generación"
    textAlign="center"
    showBadge={true}
    badgeText="MUGA"
  />

  <section class="relative px-6 lg:px-8 py-24">
    <div class="mx-auto max-w-4xl text-center">
      <div class="space-y-12">
        <!-- Stack -->
        <div>
          <h3 class="text-sm font-mono text-accent uppercase tracking-wider mb-4">Stack</h3>
          <p class="text-2xl font-light text-white">
            Astro + TailwindCSS + TypeScript
          </p>
          <p class="text-muga-neutral mt-2">
            Hostinger
          </p>
        </div>

        <!-- KPI -->
        <div>
          <h3 class="text-sm font-mono text-accent uppercase tracking-wider mb-4">Indicadores Clave de Rendimiento (KPIs) Garantizados</h3>
          <p class="text-muga-neutral mb-6">Medimos y garantizamos el rendimiento de tus proyectos con métricas objetivas y verificables.</p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-zinc-800/30 p-6 rounded-lg text-center border border-zinc-700/50">
              <p class="text-white font-medium mb-4">Performance</p>
              <ul class="text-muga-neutral space-y-2 font-mono text-sm">
                <li>LCP ≤2.5s</li>
                <li>CLS ≤0.1</li>
                <li>INP ≤200ms</li>
              </ul>
            </div>
            <div class="bg-zinc-800/30 p-6 rounded-lg text-center border border-zinc-700/50">
              <p class="text-white font-medium mb-4">Accesibilidad</p>
              <ul class="text-muga-neutral space-y-2 font-mono text-sm">
                <li>WCAG AA ≥90</li>
                <li>SEO ≥95%</li>
                <li>Indexación</li>
              </ul>
            </div>
            <div class="bg-zinc-800/30 p-6 rounded-lg text-center border border-zinc-700/50">
              <p class="text-white font-medium mb-4">Fiabilidad</p>
              <ul class="text-muga-neutral space-y-2 font-mono text-sm">
                <li>HTTPS</li>
                <li>Headers seguros</li>
                <li>Uptime ≥99.9%</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Filosofía -->
        <div>
          <h3 class="text-sm font-mono text-accent uppercase tracking-wider mb-4">Filosofía</h3>
          <p class="text-xl font-light text-white">
            Construir con método,<br>
            entregar con valor.
          </p>
          <p class="text-muga-neutral mt-4 text-sm">
            Transparencia total • Reportes automáticos • Mantenimiento continuo
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>