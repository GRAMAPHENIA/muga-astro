---
import Navigation from "../components/ui/Navigation/Navigation.astro";
import Breadcrumb from "../components/ui/Breadcrumb/Breadcrumb.astro";
import Layout from "../layouts/layout.astro";
import PageHeroSection from "../components/HeroSection/PageHeroSection.astro";
import type { BreadcrumbItem } from "../types";

const breadcrumbItems: BreadcrumbItem[] = [
  {
    label: "Productos",
    href: "/productos",
    active: true,
  },
];
---

<Layout
  title="MUGA - Productos"
  description="Descubre nuestros productos"
>
  <Navigation>
    <Breadcrumb items={breadcrumbItems} />
  </Navigation>
  <div class="hidden lg:block">
    <Breadcrumb items={breadcrumbItems} />
  </div>
  <PageHeroSection 
    title="Nuestros Productos"
    description="Descubrí los productos más recientes"
    textAlign="left"
    showBadge={true}
    badgeText="Catálogo"
  />
  <div class="container mx-auto px-6 py-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Producto 1: Landing Page -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/products/edge.webp" alt="Landing Page" class="w-full h-48 object-cover mb-4 border border-white/10" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">Landing Page</h2>
          <p class="mb-6 text-center text-graylight">Landing page moderna y optimizada para captar clientes y mostrar tu marca.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://mugaland.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
        <!-- Producto 2: Corporativo Astro -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/products/spark.webp" alt="Corporativo Astro" class="w-full h-48 object-cover mb-4 border border-white/10" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">Corporativo Astro</h2>
          <p class="mb-6 text-center text-graylight">Sitio corporativo profesional construido con Astro, ideal para empresas y negocios.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://corporativo-astro.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
      </div>
  </div>
</Layout>
