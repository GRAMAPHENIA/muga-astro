---
import Layout from "../layouts/layout.astro";
import Navigation from "../components/ui/Navigation/Navigation.astro";
import Breadcrumb from "../components/ui/Breadcrumb/Breadcrumb.astro";
import PageHeroSection from "../components/HeroSection/PageHeroSection.astro";

const breadcrumbItems = [
  {
    label: "Contacto",
    href: "/contacto",
    active: true,
  },
];
---

<Layout title="Contacto | MUGA" description="Ponte en contacto con nosotros">
  <Navigation />
  <Breadcrumb items={breadcrumbItems} />
  <PageHeroSection 
    title="Contacto"
    description="Estamos aquí para ayudarte. No dudes en ponerte en contacto con nosotros."
    textAlign="left"
    showBadge={true}
    badgeText="Comunicación"
  />
 
</Layout>