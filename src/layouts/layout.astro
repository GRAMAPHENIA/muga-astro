---
// Importar estilos globales
import "../styles/global.css";
import Footer from "../components/ui/Footer/Footer.astro";
import Navigation from "../components/ui/Navigation/Navigation.astro";
import { ClientRouter } from 'astro:transitions';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "MUGA",
  description = "MUGA es una marca de productos de alta calidad",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
  </head>
  <body class="bg-obscure text-graylight">
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>