---
// Footer.astro - Componente de pie de página
import ArrowLink from "../Button/ArrowLink.astro";
export interface Props {}
---

<footer class="bg-muga-dark-800/50 py-8 mt-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="flex justify-center">
      <ArrowLink 
        href="/modelo-negocio" 
        text="Modelo de Negocio" 
        textColor="text-white"
      />
    </div>
    <div class="mt-4 text-center text-sm text-muga-neutral">
      <p> <span class="font-mono">{new Date().getFullYear()}</span>  <span class="font-medium text-accent">MUGA</span>. Todos los derechos reservados.</p>
      <p class="mt-1 text-xs text-graylight font-mono">Versión 0.0.6</p>
    </div>
  </div>
</footer>